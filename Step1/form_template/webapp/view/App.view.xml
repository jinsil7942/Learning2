<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="FormChange354wide"
			editable="true">
			<f:title>
				<core:Title text="SAPUI5 Fiori Cafe(SFC)- UNIT 6 : SAPUI5 Layout - Part 2 Form" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="User Name">
							<f:fields>
								<Input id="inputUserName"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="User Email">
							<f:fields>
								<Input id="inputEmailID">
									<layoutData>
										<l:GridData span="XL1 L2 M2 S4" />
									</layoutData>
                                </Input>
								<Input  id="inputEmailDomin"/>
							</f:fields>
						</f:FormElement>						
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</mvc:View>
